@model CRUDProductos.Models.Producto

@{
    ViewData["Title"] = "Crear";
}


<div class="col-md-12">
    <h6 class="text-center">Nuevo Producto</h6>
    <hr />
    <form asp-action="Crear" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <strong><label>Nombre:</label></strong>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong><label>Descripción:</label></strong>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <strong><label>Precio:</label></strong>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm mt-3">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
